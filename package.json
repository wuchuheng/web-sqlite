{
	"name": "@wuchuheng/web-sqlite",
	"version": "0.1.6",
	"main": "dist/main.mjs",
	"module": "dist/main.mjs",
	"types": "dist/main.d.mts",
	"description": "A TypeScript-first runtime library for SQLite WebAssembly with OPFS persistence and functional API.",
	"bin": {
		"web-sqlite": "./dist/cli.mjs"
	},
	"scripts": {
		"build": "tsup",
		"build:dev": "tsup --watch --sourcemap",
		"prepare": "pnpm run build",
		"build:wasm": "tsx scripts/build-jswasm.ts",
		"format": "prettier --write src/**/*.ts scripts/**/*.ts",
		"start:examples": "tsx scripts/secure-server.ts",
		"release": "pnpm publish --access public"
	},
	"keywords": [
		"sqlite",
		"wasm",
		"webassembly",
		"database",
		"opfs",
		"worker",
		"typescript",
		"functional"
	],
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wuchuheng/web-sqlite.git"
	},
	"bugs": {
		"url": "https://github.com/wuchuheng/web-sqlite/issues"
	},
	"homepage": "https://github.com/wuchuheng/web-sqlite#readme",
	"author": "wuchuheng",
	"license": "MIT",
	"packageManager": "pnpm@10.7.0",
	"devDependencies": {
                "@playwright/test": "^1.48.2",
                "@types/node": "^24.5.2",
                "http-server": "^14.1.1",
                "prettier": "^3.6.2",
                "tsup": "^8.5.0",
                "tsx": "^4.20.5",
                "typescript": "^5.9.2"
        }
}
